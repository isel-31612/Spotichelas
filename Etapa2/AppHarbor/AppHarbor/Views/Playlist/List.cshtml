@model IEnumerable<Utils.ViewPlaylist>

@{
    ViewBag.Title = "List";
    String currentUser = ViewBag.User;
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "New")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Owner
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Owner)
        </td>
        <td>
            @if(!currentUser.Equals(item.Owner)){
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @:|
                @:Only the Owner can edit the playlist
            }else{
                @Html.ActionLink("Details", "Details", new { id=item.Id })
                @:|
                @Html.ActionLink("Edit", "Edit", new { id=item.Id })
                @:|
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                @:|
                @Html.ActionLink("Permissions","Permission", new { id=item.Id })
            }
        </td>
    </tr>
}

</table>
