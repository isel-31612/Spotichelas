@model IEnumerable<Utils.ViewAlbum>

@{
    ViewBag.Title = "AlbumList";
}

<h2>List of Albuns</h2>

<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Artist
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            
            @item.Artist.First().Value
        </td>
        <td>
            @Html.ActionLink("Details", "Album", new { href = item.Href })
        </td>
    </tr>
}

</table>
